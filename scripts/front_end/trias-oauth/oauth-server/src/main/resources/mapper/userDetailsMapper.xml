<?xml version="1.0" encoding="UTF-8" ?> <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.trias.oauth.mapper.UserDetailsMapper">
	<resultMap type="com.trias.oauth.model.vo.LocalUserRoleVO" id="triasUser">
		<id column="id" property="id" jdbcType="INTEGER"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="role_id" property="roleId" jdbcType="INTEGER"/>
        <result column="type" property="roleName" jdbcType="VARCHAR"/>
	</resultMap>
	
	<select id="findUserByName" resultMap="triasUser">
		select 
		a.id,
		a.username,
		a.password,
		a.role_id,
		b.type 
		from trias_user a inner join trias_role b on a.role_id = b.id
		where username = #{userName}
	</select>
</mapper>